@model TimeTableModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Create Time Table</h3>

                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label asp-for="WorkingDays" class="form-label">Working Days (1-7)</label>
                            <input asp-for="WorkingDays" class="form-control" type="number" min="1" max="7" required />
                            <span asp-validation-for="WorkingDays" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SubjectsPerDay" class="form-label">Subjects Per Day (1-9)</label>
                            <input asp-for="SubjectsPerDay" class="form-control" type="number" min="1" max="9" required />
                            <span asp-validation-for="SubjectsPerDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalSubjects" class="form-label">Total Subjects</label>
                            <input asp-for="TotalSubjects" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="TotalSubjects" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Next</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>